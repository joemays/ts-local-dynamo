{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES2020"],
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
